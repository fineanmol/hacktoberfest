            {
                cin>>a[i];
            }

            ll r= 0;
            ll ans=0;
            rep(i,0,n)
            {
                r = max(r,i);
                while(r<n && a[r]>=r+1-i)
                {
                    ++r;
                }
                // err2(i,r);
                ans += (r-i);
            }
            cout<<ans<<'\n';

        }
