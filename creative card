        int hour = LocalTime.now().getHour();

        if (hour < 12) {
            return "ðŸŒ… Good Morning!";
        } else if (hour < 17) {
            return "â˜€ï¸ Good Afternoon!";
        } else if (hour < 21) {
            return "ðŸŒ‡ Good Evening!";
